<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:padding="16dp">

    <!-- Container to group and center vertically -->
    <LinearLayout
        android:id="@+id/centerContainer"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Greeting Text -->
        <TextView
            android:id="@+id/greetingText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Hello, Student ðŸ‘‹"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="#2C3E50"
            android:gravity="center"/>

        <!-- Todayâ€™s Tasks Section -->
        <TextView
            android:id="@+id/todayTasksLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Today's Reminders"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#4A90E2"
            android:layout_marginTop="24dp" />

        <!-- List Placeholder -->
        <TextView
            android:id="@+id/reminderPlaceholder"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="You have no reminders today."
            android:textColor="#95A5A6"
            android:layout_marginTop="12dp"
            android:textSize="16sp"
            android:gravity="center"/>

        <!-- Add Reminder Button -->
        <Button
            android:id="@+id/addReminderButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Add New Reminder"
            android:textColor="#FFFFFF"
            android:backgroundTint="#FF6B6B"
            android:layout_marginTop="32dp" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
