<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:padding="16dp">

    <!-- Greeting Text -->
    <TextView
        android:id="@+id/greetingText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Hello, Student ðŸ‘‹"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="#2C3E50"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Todayâ€™s Tasks Section -->
    <TextView
        android:id="@+id/todayTasksLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Today's Reminders"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="#4A90E2"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@id/greetingText"
        app:layout_constraintStart_toStartOf="parent" />

    <!-- List Placeholder -->
    <TextView
        android:id="@+id/reminderPlaceholder"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="You have no reminders today."
        android:textColor="#95A5A6"
        android:layout_marginTop="12dp"
        android:textSize="16sp"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/todayTasksLabel"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Add Reminder Button -->
    <Button
        android:id="@+id/addReminderButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Add New Reminder"
        android:textColor="#FFFFFF"
        android:backgroundTint="#FF6B6B"
        android:layout_marginTop="32dp"
        app:layout_constraintTop_toBottomOf="@id/reminderPlaceholder"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
